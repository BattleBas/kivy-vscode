{
    "name": "kivy-vscode",
    "displayName": "Kivy",
    "description": "Kivy language support for Visual Studio Code.",
    "version": "0.1.0",
    "publisher": "BattleBas",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/BattleBas/kivy-vscode"
    },
    "contributes": {
        "languages": [
            {
                "id": "kivy",
                "aliases": [
                    "kivy",
                    "kv"
                ],
                "extensions": [
                    ".kv"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "kivy",
                "scopeName": "source.kv",
                "path": "./syntaxes/kv.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "kivy",
                "path": "./snippets/ux_widgets.json"
            },
            {
                "language": "kivy",
                "path": "./snippets/layouts.json"
            },
            {
                "language": "kivy",
                "path": "./snippets/complex_ux_widgets.json"
            },
            {
                "language": "kivy",
                "path": "./snippets/behaviour_widgets.json"
            }
        ]
    }
}